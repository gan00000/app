<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/e_size_290"
    android:background="@drawable/efun_pd_list_item_bg_selector"
    android:paddingTop="@dimen/e_size_35"
    android:paddingLeft="@dimen/e_size_60"
    android:paddingRight="@dimen/e_size_60" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/e_size_16"
        android:paddingTop="@dimen/e_size_16" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/e_size_190"
            android:layout_height="@dimen/e_size_190" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingLeft="@dimen/e_size_35" >

            <TextView
                android:id="@+id/item_title"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/e_353434"
                android:textSize="@dimen/e_text_size_48" />

            <TextView
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/e_size_12"
                android:layout_marginTop="@dimen/e_size_13"
                android:textColor="@color/efun_pd_text_b2b2b2_to_white_selecter"
                android:duplicateParentState="true"
                android:textSize="@dimen/e_text_size_35" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/e_ffa01c"
                    android:textSize="@dimen/e_text_size_30" />

                <ImageView
                    android:layout_width="@dimen/e_size_28"
                    android:layout_height="@dimen/e_size_25"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/e_size_5"
                    android:layout_marginLeft="@dimen/e_size_20"
                    android:layout_marginRight="@dimen/e_size_10"
                    android:src="@drawable/efun_pd_zan" />

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="@color/e_ffa01c"
                    android:textSize="@dimen/e_text_size_30" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/e_size_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout 
                android:id="@+id/item_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView 
                    android:layout_width="@dimen/e_size_33"
                    android:layout_height="@dimen/e_size_33"
                    android:layout_marginRight="@dimen/e_size_10"
                    android:src="@drawable/efun_pd_game_list_fb_icon"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/e_text_size_37"
                    android:textColor="@color/e_3b5b98"
                    android:text="@string/efun_pd_game_fb"/>
            </LinearLayout>
            
            <TextView
                android:id="@+id/item_button" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_30"
                android:textSize="@dimen/e_text_size_37"
                android:textColor="@android:color/white"
                android:paddingLeft="@dimen/e_size_35"
                android:paddingRight="@dimen/e_size_35"
                android:paddingTop="@dimen/e_size_10"
                android:paddingBottom="@dimen/e_size_10"
                android:gravity="center_vertical"
                android:layout_below="@id/item_fb"
                />
            <!-- <ImageView
                android:id="@+id/item_button"
                android:layout_width="@dimen/e_size_100"
                android:layout_height="@dimen/e_size_100"
                android:layout_centerInParent="true" /> -->

            <!-- <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_button"
                android:textColor="@color/e_5fb1ff"
                android:textSize="@dimen/e_text_size_26" 
                android:visibility="invisible"/> -->
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:layout_marginTop="@dimen/e_size_28"
        android:layout_alignParentBottom="true"
        android:background="@color/e_a7a7a7" />

</RelativeLayout>