<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/e_size_90"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.0"
        android:background="@drawable/efun_pd_welfare_act_extension_gift_list_item_bg_selecter"
        android:textSize="@dimen/e_text_size_50"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <View
        android:id="@+id/item_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:background="@android:color/black" />

</LinearLayout>