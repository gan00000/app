<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/e_size_30" >

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/e_size_1"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/change_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/efun_pd_reset_account"
                android:textColor="@color/e_67d0fe"
                android:textSize="@dimen/e_text_size_35" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/e_size_900"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/e_size_90"
            android:layout_marginRight="@dimen/e_size_90"
            android:layout_marginTop="@dimen/e_size_90"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/e_size_600"
                android:background="@drawable/efun_pd_authorization_game_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/e_size_167"
                        android:layout_height="@dimen/e_size_167"
                        android:background="@drawable/efun_pd_app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/e_size_20"
                        android:text="@string/app_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/e_text_size_30" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/e_size_57"
                    android:layout_height="@dimen/e_size_32"
                    android:layout_marginLeft="@dimen/e_size_30"
                    android:layout_marginRight="@dimen/e_size_30"
                    android:src="@drawable/efun_pd_authoriza_jian_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/game_icon"
                        android:layout_width="@dimen/e_size_167"
                        android:layout_height="@dimen/e_size_167"
                        android:background="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/game_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/e_size_20"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/e_text_size_30" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/efun_pd_game_authorization_bg"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/head_icon"
                    android:layout_width="@dimen/e_size_248"
                    android:layout_height="@dimen/e_size_248"
                    android:layout_marginTop="@dimen/e_size_30" />

                <TextView
                    android:id="@+id/user_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:textColor="@color/e_67d1ff"
                    android:textSize="@dimen/e_text_size_40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/e_size_40"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:text="@string/efun_pd_login_authoriza_account"
                    android:textColor="@color/e_696969"
                    android:textSize="@dimen/e_text_size_35" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_90"
            android:layout_marginRight="@dimen/e_size_90"
            android:layout_marginTop="@dimen/e_size_35"
            android:layout_marginBottom="@dimen/e_size_35"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/authori_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_cons_c9c9c9_to_9f9f9f_selector"
                android:gravity="center"
                android:padding="@dimen/e_size_30"
                android:text="@string/efun_pd_cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_35" />

            <View
                android:layout_width="@dimen/e_size_35"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/authori_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_cons_56a7ed_to_3176b2_selector"
                android:gravity="center"
                android:padding="@dimen/e_size_30"
                android:text="@string/efun_pd_login_authoriza_submit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_35" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>