<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e_4f83e3"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/authoriza_return" 
            android:layout_width="@dimen/e_size_124"
            android:layout_height="@dimen/e_size_63"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/e_size_10"
            android:layout_marginLeft="@dimen/e_size_10"
            android:src="@drawable/efun_pd_authoriza_return_icon"
            />
        <ImageView
            android:layout_width="@dimen/e_size_353"
            android:layout_height="@dimen/e_size_173"
            android:layout_marginTop="@dimen/e_size_27"
            android:src="@drawable/efun_pd_login_logo" />

        <LinearLayout
            android:layout_width="@dimen/e_size_768"
            android:layout_height="@dimen/e_size_87"
            android:layout_marginTop="@dimen/e_size_103"
            android:background="@drawable/efun_pd_cons_login_or_register_normal_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/login_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_login_bg_selector"
                android:gravity="center"
                android:text="@string/efun_pd_login_title_login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_45" />

            <View
                android:layout_width="@dimen/e_size_1"
                android:layout_height="match_parent"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/login_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_register_bg_selector"
                android:gravity="center"
                android:text="@string/efun_pd_login_title_register"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_45" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_login_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/e_size_834"
                android:layout_height="@dimen/e_size_444"
                android:layout_marginTop="@dimen/e_size_50"
                android:background="@drawable/efun_pd_cons_login_or_register_normal_bg"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_82"
                        android:layout_height="@dimen/e_size_71"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/e_size_45"
                        android:background="@drawable/efun_pd_user" />

                    <EditText
                        android:id="@+id/edit_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/e_size_24"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/efun_pd_hint_account"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/e_text_size_50" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginBottom="@dimen/e_size_10"
                    android:layout_marginTop="@dimen/e_size_10"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_54"
                        android:layout_height="@dimen/e_size_72"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/e_size_60"
                        android:background="@drawable/efun_pd_lock" />

                    <EditText
                        android:id="@+id/edit_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/e_size_24"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/efun_pd_hint_password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/e_text_size_50" />

                    <ImageView
                        android:id="@+id/login_login_pw_eye"
                        android:layout_width="@dimen/e_size_82"
                        android:layout_height="@dimen/e_size_45"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/e_size_38"
                        android:background="@drawable/efun_pd_eye_selector" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginTop="@dimen/e_size_10"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/contaier_linear_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/efun_pd_login_login_btn_bg_selector"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/efun_pd_login_title_login"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/e_text_size_50" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_1"
                android:layout_width="@dimen/e_size_834"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_45"
                android:gravity="right"
                android:paddingRight="@dimen/e_size_30"
                android:textColor="@color/efun_pd_text_e1e1e1_to_454889_selecter"
                android:textSize="@dimen/e_text_size_40" />

            <LinearLayout
                android:id="@+id/contaier_linear_2"
                android:layout_width="@dimen/e_size_656"
                android:layout_height="@dimen/e_size_100"
                android:layout_marginBottom="@dimen/e_size_33"
                android:layout_marginTop="@dimen/e_size_80"
                android:background="@drawable/efun_pd_cons_login_other_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/e_size_79"
                    android:layout_height="@dimen/e_size_79"
                    android:layout_marginLeft="@dimen/e_size_138"
                    android:layout_marginRight="@dimen/e_size_16"
                    android:background="@drawable/efun_pd_login_fb_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/efun_pd_login_by_facebook"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_40" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contaier_linear_3"
                android:layout_width="@dimen/e_size_656"
                android:layout_height="@dimen/e_size_100"
                android:layout_marginBottom="@dimen/e_size_33"
                android:background="@drawable/efun_pd_cons_login_other_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/e_size_79"
                    android:layout_height="@dimen/e_size_79"
                    android:layout_marginLeft="@dimen/e_size_138"
                    android:layout_marginRight="@dimen/e_size_26"
                    android:background="@drawable/efun_pd_login_google_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/efun_pd_login_by_google"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_40" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contaier_linear_4"
                android:layout_width="@dimen/e_size_656"
                android:layout_height="@dimen/e_size_100"
                android:background="@drawable/efun_pd_cons_login_other_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/e_size_79"
                    android:layout_height="@dimen/e_size_79"
                    android:layout_marginLeft="@dimen/e_size_138"
                    android:layout_marginRight="@dimen/e_size_75"
                    android:background="@drawable/efun_pd_login_bahamut_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/efun_pd_login_by_bahamut"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_40" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e_size_40"
                android:layout_marginTop="@dimen/e_size_40"
                android:gravity="center"
                android:text="@string/efun_pd_login_register"
                android:textColor="@color/efun_pd_text_e1e1e1_to_454889_selecter"
                android:textSize="@dimen/e_text_size_40" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >
            <LinearLayout
                android:layout_width="@dimen/e_size_834"
                android:layout_height="@dimen/e_size_444"
                android:layout_marginTop="@dimen/e_size_50"
                android:background="@drawable/efun_pd_cons_login_or_register_normal_bg"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_82"
                        android:layout_height="@dimen/e_size_71"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/e_size_45"
                        android:background="@drawable/efun_pd_user" />

                    <EditText
                        android:id="@+id/edit_register_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/e_size_24"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/efun_pd_hint_account"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/e_text_size_50" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginBottom="@dimen/e_size_10"
                    android:layout_marginTop="@dimen/e_size_10"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_54"
                        android:layout_height="@dimen/e_size_72"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/e_size_60"
                        android:background="@drawable/efun_pd_lock" />

                    <EditText
                        android:id="@+id/edit_register_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/e_size_24"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/efun_pd_hint_password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/e_text_size_50" />

                    <ImageView
                        android:id="@+id/login_register_eye_1"
                        android:layout_width="@dimen/e_size_82"
                        android:layout_height="@dimen/e_size_45"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/e_size_38"
                        android:background="@drawable/efun_pd_eye_selector" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginTop="@dimen/e_size_10"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_54"
                        android:layout_height="@dimen/e_size_72"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/e_size_60"
                        android:background="@drawable/efun_pd_lock_sure" />

                    <EditText
                        android:id="@+id/edit_register_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/e_size_24"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/efun_pd_hint_password_confirm"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/e_text_size_50" />

                    <ImageView
                        android:id="@+id/login_register_eye_2"
                        android:layout_width="@dimen/e_size_82"
                        android:layout_height="@dimen/e_size_45"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/e_size_38"
                        android:background="@drawable/efun_pd_eye_selector" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/e_size_834"
                android:layout_marginTop="@dimen/e_size_50"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_server_clause"
                    android:layout_width="@dimen/e_size_80"
                    android:layout_height="@dimen/e_size_80"
                    android:background="@drawable/efun_pd_checkbox_selector"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/e_size_80"
                    android:layout_marginLeft="@dimen/e_size_20"
                    android:text="@string/efun_pd_agree_service_clause_1"
                    android:textSize="@dimen/e_text_size_35"
                    android:textColor="@android:color/white" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txt_server_clause"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/efun_pd_agree_service_clause_2"
                    android:textSize="@dimen/e_text_size_40"
                    android:textColor="@color/e_00b7ee" />
            </LinearLayout>
            
             <TextView
                android:id="@+id/text_register_1"
                android:layout_width="@dimen/e_size_834"
                android:layout_height="@dimen/e_size_147"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/e_size_118"
                android:background="@drawable/efun_pd_cons_register_new_bg_selector"
                android:gravity="center"
                android:text="@string/efun_pd_register_finish"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_50" />
             <View 
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/e_size_300"
                 android:visibility="invisible"
                 />
        </LinearLayout>
    </LinearLayout>

</ScrollView>