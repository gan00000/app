<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/e_size_800"
        android:layout_height="@dimen/e_size_546"
        android:layout_centerInParent="true"
        android:background="@drawable/efun_pd_cons_white_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/e_size_40" >

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_36" />

        <View
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/e_size_130" />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/e_size_70"
            android:layout_marginTop="@dimen/e_size_70"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/e_text_size_36"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/chose_item_layout"
            android:layout_width="@dimen/e_size_650"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/e_size_95"
            android:layout_marginTop="@dimen/e_size_95"
            android:background="@drawable/efun_pd_cons_aeaeae_right_angle_bg"
            android:orientation="horizontal"
            android:padding="@dimen/e_size_10" >

            <TextView
                android:id="@+id/chose_item_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="@dimen/e_text_size_36" />

            <ImageView
                android:layout_width="@dimen/e_size_35"
                android:layout_height="@dimen/e_size_16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/e_size_10"
                android:src="@drawable/efun_pd_person_check_jian_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/efun_pd_cons_ff4b4b_bg"
            android:paddingBottom="@dimen/e_size_10"
            android:paddingLeft="@dimen/e_size_80"
            android:paddingRight="@dimen/e_size_80"
            android:paddingTop="@dimen/e_size_10"
            android:text="@string/efun_pd_get_submit"
            android:textColor="@color/e_ffffff"
            android:textSize="@dimen/e_text_size_36" />
    </LinearLayout>

</RelativeLayout>