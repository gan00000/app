<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.efun.platform.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.efun.platform.widget.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/e_size_80"
        android:paddingRight="@dimen/e_size_80" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_100"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/e_size_173"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="@string/efun_pd_register_account"
                android:textColor="@color/e_8c8c8c"
                android:textSize="@dimen/e_text_size_40" /> 

            <EditText
                android:id="@+id/edit_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/e_size_100"
                android:layout_marginLeft="@dimen/e_size_25"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_input_edging_cons_bg"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/e_size_20"
                android:paddingRight="@dimen/e_size_20"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_36" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/forget_pwd_change_ico"
                android:layout_width="@dimen/e_size_173"
                android:layout_height="@dimen/e_size_85"
                android:layout_gravity="center_vertical"
                android:background="@drawable/efun_pd_forget_pwd_phone_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/e_size_100"
                android:layout_marginLeft="@dimen/e_size_25"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_input_edging_cons_bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/e_size_20"
                android:paddingRight="@dimen/e_size_20" >

                <LinearLayout
                    android:id="@+id/forget_pwd_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/person_phone_area"
                        android:layout_width="@dimen/e_size_220"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:text="台湾  +886"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/e_text_size_36" />

                    <ImageView
                        android:layout_width="@dimen/e_size_35"
                        android:layout_height="@dimen/e_size_16"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/e_size_10"
                        android:layout_marginRight="@dimen/e_size_10"
                        android:src="@drawable/efun_pd_person_check_jian_icon" />

                    <View
                        android:layout_width="@dimen/e_size_3"
                        android:layout_height="match_parent"
                        android:background="@color/e_ffa8abad" />

                    <EditText
                        android:id="@+id/forget_pwd_ed_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="center"
                        android:paddingLeft="@dimen/e_size_10"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/e_text_size_36" />
                </LinearLayout>

                <EditText
                    android:id="@+id/forget_pwd_email"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/e_size_100"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:background="@null"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/e_text_size_36" >
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_30"
            android:gravity="center_horizontal"
            android:text="@string/efun_pd_login_forget_tips"
            android:textColor="@color/e_b4b4b4"
            android:textSize="@dimen/e_text_size_34" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="@dimen/e_size_600"
            android:layout_height="@dimen/e_size_130"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/e_size_100"
            android:background="@drawable/efun_pd_cons_2dade0_bg"
            android:gravity="center"
            android:text="@string/efun_pd_get_submit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_48" />
    </LinearLayout>

</LinearLayout>