<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.efun.platform.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.efun.platform.widget.TitleView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/e_size_16"
            android:paddingLeft="@dimen/e_size_62"
            android:paddingTop="@dimen/e_size_16" >

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/e_size_190"
                android:layout_height="@dimen/e_size_190" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingLeft="@dimen/e_size_35" >

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/e_353434"
                    android:textSize="@dimen/e_text_size_48" />

                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/e_size_8"
                    android:layout_marginTop="@dimen/e_size_10"
                    android:textColor="@color/e_8e8e8e"
                    android:textSize="@dimen/e_text_size_35" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/e_size_5"
                    android:layout_marginRight="@dimen/e_size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item_game_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/e_ffa01c"
                        android:textSize="@dimen/e_text_size_30" />

                    <ImageView
                        android:id="@+id/item_detail_zan_icon"
                        android:layout_width="@dimen/e_size_120"
                        android:layout_height="@dimen/e_size_45"
                        android:layout_marginLeft="@dimen/e_size_30" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/e_size_50" >

                <TextView
                    android:id="@+id/item_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/e_size_10"
                    android:paddingLeft="@dimen/e_size_25"
                    android:paddingRight="@dimen/e_size_25"
                    android:paddingTop="@dimen/e_size_10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_37" />
                <!--
                     <ImageView
                    android:id="@+id/item_button"
                    android:layout_width="@dimen/e_size_100"
                    android:layout_height="@dimen/e_size_100"
                    android:layout_centerInParent="true" />
                -->


                <!--
                     <TextView
                    android:layout_width="@dimen/e_size_100"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_button"
                    android:gravity="center_horizontal"
                    android:text="@string/efun_pd_vedio"
                    android:textColor="@color/e_5fb1ff"
                    android:textSize="@dimen/e_text_size_26" />
                -->
            </RelativeLayout>
        </LinearLayout>

        <!--
             <com.efun.platform.widget.RoundCornerTextView
            android:id="@+id/round_text"
            android:layout_width="@dimen/e_size_200"
            android:layout_height="@dimen/e_size_47"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_30" />
        -->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:background="@color/e_8e8e8e" />

    <com.efun.platform.widget.PagerTab
        android:id="@+id/pager_view_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_90" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:background="@color/e_8e8e8e" />

    <com.efun.platform.module.game.view.GameVPager
        android:id="@+id/pager_view_v4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/e_efeff4" >
    </com.efun.platform.module.game.view.GameVPager>

</LinearLayout>