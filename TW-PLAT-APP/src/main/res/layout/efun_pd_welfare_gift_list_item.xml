<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e_f8f4ee" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/e_size_25"
        android:layout_marginRight="@dimen/e_size_25"
        android:layout_marginTop="@dimen/e_size_167"
        android:background="@drawable/efun_pd_welfare_gift_item_content_bg"
        android:paddingBottom="@dimen/e_size_46" >

        <com.efun.platform.widget.RoundCornerTextView
            android:id="@+id/item_text"
            android:layout_width="@dimen/e_size_250"
            android:layout_height="@dimen/e_size_60"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_35" />

        <LinearLayout
            android:id="@+id/gift_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_264"
            android:layout_marginTop="@dimen/e_size_45"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/efun_pd_rest"
                android:textColor="@color/e_8c8c8c"
                android:textSize="@dimen/e_text_size_40" />

            <!--
                 <com.efun.platform.widget.CurProgressBar
                android:id="@+id/curProgressBar"
                android:layout_width="@dimen/e_size_282"
                android:layout_height="@dimen/e_size_44"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/e_size_15"
                android:layout_marginRight="@dimen/e_size_24"
                android:background="@drawable/efun_pd_progressdialog_before_bg"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:maxHeight="@dimen/e_size_20"
                android:minHeight="@dimen/e_size_20"
                android:paddingLeft="@dimen/e_size_30"
                android:paddingRight="@dimen/e_size_30"
                android:progressDrawable="@drawable/efun_pd_progressdialog_progress_horizontal" />-->

            <LinearLayout
                android:layout_width="@dimen/e_size_282"
                android:layout_height="@dimen/e_size_44"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/e_size_15"
                android:layout_marginRight="@dimen/e_size_24"
                android:background="@color/e_7fbaef"
                android:padding="@dimen/e_size_5" >

                <ProgressBar
                    android:id="@+id/curProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:maxHeight="@dimen/e_size_20"
                    android:minHeight="@dimen/e_size_20"
                    android:progressDrawable="@drawable/efun_pd_progressdialog_progress_horizontal" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/e_size_60"
                android:text="80%"
                android:textColor="@color/e_8c8c8c"
                android:textSize="@dimen/e_text_size_37" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/gift_progress"
            android:layout_below="@id/gift_progress"
            android:layout_marginTop="@dimen/e_size_40"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/efun_pd_end_date"
                android:textColor="@color/e_8c8c8c"
                android:textSize="@dimen/e_text_size_30" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/e_8c8c8c"
                android:textSize="@dimen/e_text_size_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:text="@string/efun_pd_remain_gift"
                android:textColor="@color/e_8c8c8c"
                android:textSize="@dimen/e_text_size_30" />

            <TextView
                android:id="@+id/item_gift_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/e_8c8c8c"
                android:textSize="@dimen/e_text_size_30" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/e_size_190"
        android:layout_height="@dimen/e_size_190"
        android:layout_marginLeft="@dimen/e_size_64"
        android:layout_marginTop="@dimen/e_size_80"
        android:src="@drawable/efun_pd_default_square_icon" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/e_size_39"
        android:layout_marginTop="@dimen/e_size_93"
        android:layout_toRightOf="@id/item_icon"
        android:textColor="@color/e_8c8c8c"
        android:textSize="@dimen/e_text_size_45"
        android:textStyle="bold" />

</RelativeLayout>