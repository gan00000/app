<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/efun_pd_list_item_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/contaier_linear_1"
        android:paddingTop="@dimen/e_size_25"
        android:paddingBottom="@dimen/e_size_25"
        android:layout_marginLeft="@dimen/e_size_62"
        android:layout_marginRight="@dimen/e_size_62"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_category"
            android:layout_width="@dimen/e_size_180"
            android:layout_height="@dimen/e_size_60"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_35" />

        <TextView
            android:layout_marginLeft="@dimen/e_size_20"
            android:id="@+id/item_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/efun_pd_text_696969_to_black_selecter"
            android:duplicateParentState="true"
            android:textSize="@dimen/e_text_size_45" />

        <ImageView
            android:layout_width="@dimen/e_text_size_45"
            android:layout_height="@dimen/e_text_size_45"
            android:background="@drawable/efun_pd_go_red_selector"
            android:duplicateParentState="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contaier_linear_1"
        android:layout_below="@+id/contaier_linear_1"
        android:layout_marginLeft="@dimen/e_size_217"
        android:paddingBottom="@dimen/e_size_10"
        android:textColor="@color/efun_pd_text_696969_to_black_selecter"
        android:duplicateParentState="true"
        android:textSize="@dimen/e_text_size_30" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:layout_marginLeft="@dimen/e_size_62"
        android:layout_alignParentBottom="true"
        android:background="@color/e_a7a7a7" />

</RelativeLayout>