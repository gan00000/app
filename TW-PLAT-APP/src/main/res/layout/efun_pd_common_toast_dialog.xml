<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/e_size_768"
    android:layout_height="@dimen/e_size_400"
    android:background="@drawable/efun_pd_dialog_bg_rectangle_round"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_260"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_50" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:background="@color/e_d5d5d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_136"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_btn_determine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/efun_pd_sure"
            android:textColor="@color/efun_pd_text_0c7df2_to_dbdcde_selecter"
            android:textSize="@dimen/e_text_size_50" />

        <View
            android:layout_width="@dimen/e_size_1"
            android:layout_height="match_parent"
            android:background="@color/e_d5d5d5" />

        <TextView
            android:id="@+id/dialog_btn_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/efun_pd_check"
            android:textColor="@color/efun_pd_text_0c7df2_to_dbdcde_selecter"
            android:textSize="@dimen/e_text_size_50" />
    </LinearLayout>

</LinearLayout>