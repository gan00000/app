<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e_ffffff"
    android:orientation="vertical" >

    <com.efun.platform.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.efun.platform.widget.TitleView>
        
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_147"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/e_size_30"
            android:layout_marginRight="@dimen/e_size_30"
            android:orientation="vertical" >
            
        <EditText
                android:id="@+id/edit_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="輸入原手機號碼"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColorHint="@color/e_bcbcbc"
                android:textColor="@color/e_c4c4c4"
                android:textSize="@dimen/e_text_size_50"
                android:padding="@dimen/e_size_10" />
        
        <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/e_size_2"
                android:background="@color/e_bcbcbc"/>
        
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/e_size_50"
                >
            <LinearLayout
                android:id="@+id/phone_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:orientation="horizontal"
                android:padding="@dimen/e_size_10" >

                <TextView
                    android:id="@+id/phone_area_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textColor="@color/e_7b7b7b"
                    android:textSize="@dimen/e_text_size_45" />

                <ImageView
                    android:layout_width="@dimen/e_size_35"
                    android:layout_height="@dimen/e_size_16"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/efun_pd_person_check_jian_icon" />
                
                <View 
                    android:layout_width="@dimen/e_size_2"
                    android:layout_height="match_parent"
                    android:background="@color/e_c4c4c4"
                    android:layout_marginLeft="@dimen/e_size_10"/>
            </LinearLayout>
                        
            <EditText
                android:id="@+id/edit_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:background="@null"
                android:gravity="center"
                android:hint="輸入手機號碼"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColorHint="@color/e_bcbcbc"
                android:textColor="@color/e_c4c4c4"
                android:textSize="@dimen/e_text_size_50"
                android:padding="@dimen/e_size_10" />
            </LinearLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/e_size_2"
                android:background="@color/e_bcbcbc"/>
            
            <LinearLayout
                android:id="@+id/bind_phone_old_error" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_50"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="@dimen/e_size_44"
                    android:layout_height="@dimen/e_size_43"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/efun_pd_old_phone_error" />
	            <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="@dimen/e_size_30"
	                    android:textColor="@color/e_834152"
	                    android:text="原手機號碼不正確"
	                    android:textSize="@dimen/e_text_size_40" />
            </LinearLayout>
        
        <TextView
            android:id="@+id/bind_phone_next_button"
            android:layout_width="@dimen/e_size_360"
            android:layout_height="@dimen/e_size_100"
            android:layout_marginTop="@dimen/e_size_100"
            android:background="@drawable/efun_pd_rectangle_00d2c1_bg"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/e_ffffff"
            android:textSize="@dimen/e_text_size_48" />
        
    </LinearLayout>

</LinearLayout>