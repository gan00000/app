<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.efun.platform.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.efun.platform.widget.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/e_size_24"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/contaier_linear_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_list_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:layout_weight="1.0"
                android:text="@string/efun_pd_reset_account"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_50"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginLeft="@dimen/e_size_38"
            android:layout_marginRight="@dimen/e_size_38"
            android:background="@color/e_a7a7aa" />

        <LinearLayout
            android:id="@+id/contaier_linear_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_list_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:layout_weight="1.0"
                android:text="@string/efun_pd_exit_login"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_50"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginLeft="@dimen/e_size_38"
            android:layout_marginRight="@dimen/e_size_38"
            android:background="@color/e_a7a7aa" />
    </LinearLayout>

</LinearLayout>