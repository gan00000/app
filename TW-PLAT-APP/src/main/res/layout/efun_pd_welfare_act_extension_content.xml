<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/e_f8f4ee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/e_size_40"
        android:layout_marginRight="@dimen/e_size_40"
        android:layout_marginTop="@dimen/e_size_22"
        android:background="@drawable/efun_pd_person_function_item_normal_bg"
        android:orientation="horizontal"
        android:padding="@dimen/e_size_20" >

        <ImageView
            android:id="@id/item_icon"
            android:layout_width="@dimen/e_size_190"
            android:layout_height="@dimen/e_size_190"
            android:src="@drawable/efun_pd_default_square_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_25"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingLeft="@dimen/e_size_30" >

            <TextView
                android:id="@id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/e_353434"
                android:textSize="@dimen/e_text_size_50" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_20"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/item_zan_icon"
                    android:layout_width="@dimen/e_size_55"
                    android:layout_height="@dimen/e_size_57"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/e_size_10"
                    android:src="@drawable/efun_pd_welfare_zan_icon" />

                <TextView
                    android:id="@+id/item_zan_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textColor="@color/e_f7b651"
                    android:textSize="@dimen/e_text_size_40" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/get_task_icon"
            android:layout_width="@dimen/e_size_190"
            android:layout_height="@dimen/e_size_190"
            android:layout_gravity="center_vertical"
            android:background="@drawable/efun_pd_welfare_red_to_darkred_selector"
            android:gravity="center"
            android:text="@string/efun_pd_get_task"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_40"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e_size_83"
        android:gravity="center_horizontal"
        android:text="@string/efun_pd_receive_step"
        android:textColor="@android:color/black"
        android:textSize="@dimen/e_text_size_45" />

    <com.efun.platform.module.welfare.view.TaskContainer
        android:id="@+id/taskContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e_size_54"
        android:gravity="center_horizontal"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_marginBottom="@dimen/e_size_80"
        android:layout_marginLeft="@dimen/e_size_40"
        android:layout_marginRight="@dimen/e_size_40"
        android:layout_marginTop="@dimen/e_size_88"
        android:background="@drawable/efun_pd_person_function_item_normal_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_38"
            android:layout_marginTop="@dimen/e_size_28"
            android:gravity="left"
            android:text="@string/efun_pd_get_awards_rule"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_45" />

        <TextView
            android:id="@+id/task_rule_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/e_size_50"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_35" />
    </LinearLayout>

</LinearLayout>