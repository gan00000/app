<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/efun_pd_question_list_item_bg_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_150"
        android:layout_marginLeft="@dimen/e_size_62"
        android:layout_marginRight="@dimen/e_size_62"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_content"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textSize="@dimen/e_text_size_40"
            android:textColor="@color/efun_pd_text_8e8e8e_to_black_selecter"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/item_time"
            android:textColor="@color/efun_pd_text_8e8e8e_to_black_selecter"
             android:duplicateParentState="true"
            android:textSize="@dimen/e_text_size_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/e_text_size_45"
            android:layout_height="@dimen/e_text_size_45"
            android:background="@drawable/efun_pd_go_normal" />
    </LinearLayout>

    <View
        android:id="@+id/item_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:layout_marginLeft="@dimen/e_size_62"
        android:background="@color/e_a7a7a7" />

</LinearLayout>