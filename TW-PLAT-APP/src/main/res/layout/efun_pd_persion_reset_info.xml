<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.efun.platform.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.efun.platform.widget.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/e_size_67"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/contaier_linear_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_list_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:layout_weight="1.0"
                android:text="@string/efun_pd_header"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_50" />

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="@dimen/e_size_126"
                android:layout_height="@dimen/e_size_126"
                android:src="@drawable/efun_pd_default_round_user_girl_icon" />

            <ImageView
                android:layout_width="@dimen/e_size_28"
                android:layout_height="@dimen/e_size_38"
                android:layout_marginLeft="@dimen/e_size_48"
                android:layout_marginRight="@dimen/e_size_48"
                android:src="@drawable/efun_pd_chick_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginLeft="@dimen/e_size_38"
            android:background="@color/e_a7a7aa" />

        <LinearLayout
            android:id="@+id/contaier_linear_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_list_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:layout_weight="1.0"
                android:text="@string/efun_pd_nick"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_50" />

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/e_size_20"
                android:textColor="@color/e_4f83e3"
                android:textSize="@dimen/e_text_size_50" />

            <ImageView
                android:layout_width="@dimen/e_size_28"
                android:layout_height="@dimen/e_size_38"
                android:layout_marginLeft="@dimen/e_size_48"
                android:layout_marginRight="@dimen/e_size_48"
                android:src="@drawable/efun_pd_chick_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginLeft="@dimen/e_size_38"
            android:background="@color/e_a7a7aa" />

        <LinearLayout
            android:id="@+id/contaier_linear_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_list_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:layout_weight="1.0"
                android:text="@string/efun_pd_reset_password"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_50" />

            <ImageView
                android:layout_width="@dimen/e_size_28"
                android:layout_height="@dimen/e_size_38"
                android:layout_marginRight="@dimen/e_size_48"
                android:src="@drawable/efun_pd_chick_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginLeft="@dimen/e_size_38"
            android:background="@color/e_a7a7aa" />

        <LinearLayout
            android:id="@+id/contaier_linear_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_list_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:layout_weight="1.0"
                android:text="@string/efun_pd_sex"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_50" />
            
			<TextView
			    android:id="@+id/tv_sex" 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/efun_pd_text_4f83e3_to_a7a7aa_selecter"
			    android:textSize="@dimen/e_text_size_50"
			    />
            
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="@dimen/e_size_80"
                android:layout_height="@dimen/e_size_80"
                android:background="@drawable/efun_pd_sex_boy_selector" />

            <ImageView
                android:layout_width="@dimen/e_size_28"
                android:layout_height="@dimen/e_size_38"
                android:layout_marginLeft="@dimen/e_size_48"
                android:layout_marginRight="@dimen/e_size_48"
                android:src="@drawable/efun_pd_chick_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginLeft="@dimen/e_size_38"
            android:background="@color/e_a7a7aa" />

        <LinearLayout
            android:id="@+id/contaier_linear_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_list_item_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_88"
                android:layout_weight="1.0"
                android:text="@string/efun_pd_reset_email_or_phone"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_50" />

            <ImageView
                android:layout_width="@dimen/e_size_28"
                android:layout_height="@dimen/e_size_38"
                android:layout_marginRight="@dimen/e_size_48"
                android:src="@drawable/efun_pd_chick_icon" />
        </LinearLayout>

        <View
            android:id="@+id/person_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginLeft="@dimen/e_size_38"
            android:background="@color/e_a7a7aa" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/change_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_160"
            android:background="@drawable/efun_pd_person_reset_info_bottom_btn_selecter"
            android:gravity="center"
            android:text="@string/efun_pd_reset_account"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_70" />
    </LinearLayout>

</LinearLayout>