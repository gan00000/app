<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/e_size_800"
        android:layout_height="@dimen/e_size_546"
        android:layout_centerInParent="true"
        android:background="@drawable/efun_pd_cons_white_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/e_size_40" >

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_36" />

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/e_size_130"
            android:gravity="center_horizontal"
            >
        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/efun_pd_cons_ff4b4b_bg"
            android:paddingBottom="@dimen/e_size_10"
            android:paddingLeft="@dimen/e_size_80"
            android:paddingRight="@dimen/e_size_80"
            android:paddingTop="@dimen/e_size_10"
            android:text="@string/efun_pd_get_submit"
            android:textColor="@color/e_ffffff"
            android:textSize="@dimen/e_text_size_36" />
        <TextView
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/efun_pd_cons_ff4b4b_bg"
            android:paddingBottom="@dimen/e_size_10"
            android:paddingLeft="@dimen/e_size_80"
            android:paddingRight="@dimen/e_size_80"
            android:paddingTop="@dimen/e_size_10"
            android:layout_marginLeft="@dimen/e_size_50"
            android:text="@string/efun_pd_cancel"
            android:textColor="@color/e_ffffff"
            android:textSize="@dimen/e_text_size_36" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>