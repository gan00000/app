<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 外围图形 -->
    <item>
        <shape android:shape="oval" >

            <!-- 整个图形的大小 -->
            <size
                android:height="@dimen/e_size_30"
                android:width="@dimen/e_size_30" >
            </size>
            <!-- 内部图形的内边距 -->
            <padding
                android:bottom="@dimen/e_size_10"
                android:left="@dimen/e_size_10"
                android:right="@dimen/e_size_10"
                android:top="@dimen/e_size_10" />
            <!-- 图形的填充颜色 -->
            <solid android:color="@android:color/white" >
            </solid>
            <!-- 图形的边框大小，颜色 -->
            <stroke
                android:width="@dimen/e_size_2"
                android:color="@color/e_aeaeae" >
            </stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >

            <!-- 内部图形的大小 -->
            <size
                android:height="@dimen/e_size_20"
                android:width="@dimen/e_size_20" >
            </size>
            <!-- 内部图形的填充颜色 -->
            <solid android:color="@android:color/darker_gray" >
            </solid>
        </shape>
    </item>
</layer-list>