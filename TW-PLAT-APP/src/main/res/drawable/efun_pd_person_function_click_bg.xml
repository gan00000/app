<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 外围图形 -->
    <item>
        <shape android:shape="rectangle" >

            <padding
                android:left="@dimen/e_size_5"
                android:right="@dimen/e_size_5"
                android:top="@dimen/e_size_5" />
            <!-- 图形的填充颜色 -->
            <solid android:color="@android:color/transparent" >
            </solid>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >

            <!-- 内部图形的内边距 -->
            <padding
                android:bottom="@dimen/e_size_5"
                android:left="@dimen/e_size_5"
                android:right="@dimen/e_size_5"
                android:top="@dimen/e_size_5" />

            <corners android:radius="@dimen/e_size_10" />
            <!-- 内部图形的填充颜色 -->
            <solid android:color="@color/e_a0000000" >
            </solid>

            <stroke
                android:width="@dimen/e_size_3"
                android:color="@color/e_00b7ee" >
            </stroke>
        </shape>
    </item>

</layer-list>