<?xml version="1.0" encoding="utf-8"?>
<!-- 实现左边矩形，中间矩形，右边矩形，三个矩形中间的矩形颜色与两边不一样 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/e_size_40" />

            <solid android:color="@android:color/white" />

            <stroke
                android:width="1dp"
                android:color="@color/e_ffcbcbcb" />   
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/e_size_20" />
                <solid android:color="@color/e_ffcbcbcb" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/e_size_20" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/e_ffeb6feb"
                    android:startColor="@color/e_fffdff29" />
            </shape>
        </clip>
    </item>

</layer-list>