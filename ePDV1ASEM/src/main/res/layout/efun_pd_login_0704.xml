                    android:id="@+id/login_bh"  
                    android:layout_width="@dimen/e_size_124"
                    android:layout_height="@dimen/e_size_124"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:src="@drawable/efun_pd_login_bahamut_new_icon"/> -->
                <ImageView
                    android:id="@+id/login_twitter"  
                    android:layout_width="@dimen/e_size_124"
                    android:layout_height="@dimen/e_size_124"
                    android:layout_marginLeft="@dimen/e_size_50"
                    android:src="@drawable/efun_pd_login_google_new_icon"/>
                
                </LinearLayout>


            <!-- <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/e_size_40"
                android:layout_marginTop="@dimen/e_size_40"
                android:gravity="center"
                android:text="@string/efun_pd_login_register"
                android:textColor="@color/efun_pd_text_e1e1e1_to_454889_selecter"
                android:textSize="@dimen/e_text_size_40" /> -->
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/e_size_150"/>
        </LinearLayout>

