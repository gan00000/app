<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.efun.platform.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.efun.platform.widget.TitleView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@android:color/white">

        <TextView
            android:id="@+id/txt_clause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/e_size_40"
            android:lineSpacingExtra="@dimen/e_size_2"
            android:textSize="@dimen/e_text_size_35"
            android:text="@string/efun_pd_service_clause_content" />
    </ScrollView>

</LinearLayout>