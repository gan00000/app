<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/e_size_753"
        android:layout_height="@dimen/e_size_592"
        android:layout_centerInParent="true"
        android:background="@drawable/efun_pd_cons_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/e_size_30" >

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/e_size_64"
            android:layout_height="@dimen/e_size_64"
            android:layout_gravity="top|right"
            android:src="@drawable/efun_pd_dialog_close_icon" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/e_size_30"
            android:textColor="@color/e_29292e"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/e_text_size_36" />
    </LinearLayout>

</RelativeLayout>