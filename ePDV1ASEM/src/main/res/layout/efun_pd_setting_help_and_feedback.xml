<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e_f8f4ee"
    android:orientation="vertical" >

    <com.efun.platform.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.efun.platform.widget.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e_size_93"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/efun_pd_setting_help_and_feedback_title_bg"
            android:text="@string/efun_pd_setting_help_and_feedback"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e_size_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_helper_ask"
            android:layout_width="@dimen/e_size_960"
            android:layout_height="@dimen/e_size_768"
            android:background="@drawable/efun_pd_setting_help_and_feed_content_bg"
            android:gravity="top"
            android:padding="@dimen/e_size_30"
            android:textSize="@dimen/e_text_size_40" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/e_size_960"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/e_size_10"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/helper_confirm_btn" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_50"
            android:padding="@dimen/e_size_20"
            android:text="@string/efun_pd_setting_send_mes"
            android:background="@drawable/efun_pd_reset_dark_blue_normal_btn"/>
    </LinearLayout>
    
    

</LinearLayout>