<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contaier_relative_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/e_00aaeb"
        android:minHeight="@dimen/e_size_170"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_margin="@dimen/e_size_10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/e_size_10"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_textarea_bg_focus"
                android:gravity="bottom"
                android:imeOptions="actionDone"
                android:maxLength="200"
                android:paddingLeft="@dimen/e_size_10"
                android:paddingRight="@dimen/e_size_10"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_40" />

            <TextView
                android:id="@+id/center_text"
                android:layout_width="@dimen/e_size_167"
                android:layout_height="@dimen/e_size_103"
                android:layout_margin="@dimen/e_size_10"
                android:background="@drawable/efun_pd_cons_button_selector"
                android:gravity="center"
                android:text="@string/efun_pd_sure"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_40" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_20" />
    </LinearLayout>

</RelativeLayout>