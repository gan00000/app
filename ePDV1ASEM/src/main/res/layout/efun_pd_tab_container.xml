<?xml version="1.0" encoding="utf-8"?>  
<!-- 主页布局 -->
<com.efun.platform.widget.LinearLayoutTabView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_host_body_layout"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:orientation="vertical" >  
  
    <FrameLayout  
        android:id="@+id/realtabcontent"  
        android:layout_width="fill_parent"  
        android:layout_height="0dip"  
        android:layout_weight="1" />  
  
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_2"
        android:background="@color/e_567fbc"/>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_2"
        android:background="@color/e_7aafff"/>
    <android.support.v4.app.FragmentTabHost  
        android:id="@android:id/tabhost"  
        android:layout_width="fill_parent"  
        android:layout_height="@dimen/e_size_160"
        android:background="@color/e_ffffff">  
  
        <FrameLayout  
            android:id="@android:id/tabcontent"  
            android:layout_width="0dp"  
            android:layout_height="0dp"  
            android:layout_weight="0" />              
    </android.support.v4.app.FragmentTabHost>  
  
</com.efun.platform.widget.LinearLayoutTabView> 