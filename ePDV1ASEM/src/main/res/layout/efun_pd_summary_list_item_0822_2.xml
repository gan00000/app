<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/e_ffffff"
    android:layout_marginLeft="@dimen/e_size_15" 
    android:layout_marginRight="@dimen/e_size_15"
    android:paddingLeft="@dimen/e_size_32" 
    android:paddingRight="@dimen/e_size_32" 
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/e_size_22"
        android:layout_marginBottom="@dimen/e_size_26" 
        android:layout_gravity="center_vertical">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_hot_type" 
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_gravity="center_vertical"
		        	android:layout_marginRight="@dimen/e_size_20"
		            android:paddingLeft="@dimen/e_size_20"
		            android:paddingRight="@dimen/e_size_20"
		            android:paddingBottom="@dimen/e_size_5"
		            android:paddingTop="@dimen/e_size_5"
		            android:gravity="center_vertical"
		        	android:textColor="@color/e_ffffff"
		        	android:visibility="gone"
		        	android:background="@drawable/efun_pd_summary_hot_icon_bg"
		        	android:textSize="@dimen/e_text_size_32"
		            />
                <TextView
		            android:id="@+id/item_title"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="1.0"
		            android:ellipsize="end"
		            android:singleLine="true"
		            android:textColor="@color/e_696969"
		            android:textSize="@dimen/e_text_size_32" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/item_content" 
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:layout_gravity="center_vertical"
	        	android:layout_marginTop="@dimen/e_size_22"
	            android:gravity="center_vertical"
	            android:ellipsize="end"
		        android:singleLine="true"
	        	android:textColor="@color/e_7e7e7e"
	        	android:textSize="@dimen/e_text_size_30"
	            />
	
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_22"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_category"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_gravity="center_vertical"
		        	android:layout_marginRight="@dimen/e_size_20"
		            android:paddingLeft="@dimen/e_size_20"
		            android:paddingRight="@dimen/e_size_20"
		            android:paddingBottom="@dimen/e_size_5"
		            android:paddingTop="@dimen/e_size_5"
		            android:gravity="center_vertical"
		        	android:textColor="@color/e_ffffff"
		        	android:textSize="@dimen/e_text_size_32"
		            />
                <TextView
		            android:id="@+id/item_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/e_acacac"
		            android:textSize="@dimen/e_text_size_24" />
            </LinearLayout>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/item_icon" 
            android:layout_width="@dimen/e_size_147"
            android:layout_height="@dimen/e_size_147"
            android:layout_marginLeft="@dimen/e_size_22"/>

        
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_1"
        android:background="@color/e_eeeeee"/>

</LinearLayout>