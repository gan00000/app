<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/e_f7f7f7"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/e_size_20"
    android:paddingRight="@dimen/e_size_20"
    android:paddingTop="@dimen/e_size_20" >

    <LinearLayout
        android:id="@+id/contaier_linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_480"
            android:background="@android:color/white" >

            <ImageView
                android:id="@+id/video_play"
                android:layout_width="match_parent"
                android:layout_height="@dimen/e_size_480"
                android:scaleType="centerCrop"
                android:src="@drawable/efun_pd_default_rectangle_h_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/e_50000000" >

                <ImageView
                    android:layout_width="@dimen/e_size_120"
                    android:layout_height="@dimen/e_size_120"
                    android:layout_centerInParent="true"
                    android:src="@drawable/efun_pd_common_video_play_icon" />

                <TextView
                    android:id="@+id/video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/e_size_30"
                    android:layout_marginRight="@dimen/e_size_30"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/e_e4e4e4"
                    android:textSize="@dimen/e_text_size_35" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:layout_marginRight="@dimen/e_size_30"
            android:layout_marginTop="@dimen/e_size_30"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/video_all_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/e_626262"
                android:textSize="@dimen/e_text_size_35" />

            <TextView
                android:id="@+id/video_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/e_8d8d8d"
                android:textSize="@dimen/e_text_size_35" />
        </LinearLayout>

        <TextView
            android:id="@+id/video_little_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_30"
            android:layout_marginRight="@dimen/e_size_30"
            android:layout_marginTop="@dimen/e_size_20"
            android:textColor="@color/e_8d8d8d"
            android:textSize="@dimen/e_text_size_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/e_size_20"
            android:layout_marginLeft="@dimen/e_size_30"
            android:layout_marginRight="@dimen/e_size_30"
            android:layout_marginTop="@dimen/e_size_30"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/video_zan"
                android:layout_width="@dimen/e_size_45"
                android:layout_height="@dimen/e_size_40"
                android:background="@drawable/efun_pd_summary_video_red_heart" />

            <TextView
                android:id="@+id/video_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/e_size_15"
                android:textColor="@color/e_8d8d8d"
                android:textSize="@dimen/e_text_size_35" />

            <ImageView
                android:id="@+id/video_share"
                android:layout_width="@dimen/e_size_40"
                android:layout_height="@dimen/e_size_45"
                android:layout_marginLeft="@dimen/e_size_40"
                android:background="@drawable/efun_pd_summary_video_share_icon" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>