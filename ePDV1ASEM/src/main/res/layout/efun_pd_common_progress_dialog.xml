<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   	android:layout_gravity="center"
   	android:gravity="center_vertical"
   	android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loadingIv"
        android:layout_width="@dimen/e_size_350"
        android:layout_height="@dimen/e_size_350"
        android:layout_centerInParent="true"
        android:background="@anim/frame"/>

    <TextView
        android:id="@+id/loadingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/loadingIv"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/e_size_20"
		android:textColor="@color/e_a6a6a6"
		android:textSize="@dimen/e_text_size_55"/>

</RelativeLayout>