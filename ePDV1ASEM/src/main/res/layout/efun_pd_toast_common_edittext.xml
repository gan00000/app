<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/e_size_753"
        android:layout_height="@dimen/e_size_355"
        android:layout_centerInParent="true"
        android:background="@drawable/efun_pd_cons_eef5ff_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/e_size_40" >

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="@dimen/e_size_560"
            android:layout_height="@dimen/e_size_59"
            android:layout_marginTop="@dimen/e_size_60"
            android:background="@drawable/efun_pd_cons_white_bg"
            android:gravity="center_vertical"
            android:hint="20个字以内"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/e_696969"
            android:paddingLeft="@dimen/e_size_10"
            android:paddingRight="@dimen/e_size_10"
            android:textSize="@dimen/e_text_size_34" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/e_size_44"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/efun_pd_toast_cancel_selector"
                android:paddingBottom="@dimen/e_size_10"
                android:paddingLeft="@dimen/e_size_80"
                android:paddingRight="@dimen/e_size_80"
                android:paddingTop="@dimen/e_size_10"
                android:text="@string/efun_pd_cancel"
                android:textColor="@color/e_ffffff"
                android:textSize="@dimen/e_text_size_36" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/e_size_50"
                android:background="@drawable/efun_pd_toast_save_selector"
                android:paddingBottom="@dimen/e_size_10"
                android:paddingLeft="@dimen/e_size_80"
                android:paddingRight="@dimen/e_size_80"
                android:paddingTop="@dimen/e_size_10"
                android:text="@string/efun_pd_save"
                android:textColor="@color/e_ffffff"
                android:textSize="@dimen/e_text_size_36" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>