<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/e_size_834"
        android:layout_height="@dimen/e_size_540"
        android:layout_centerInParent="true"
        android:background="@drawable/efun_pd_setting_help_and_feed_content_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
        <ImageView 
            android:layout_width="@dimen/e_size_316"
            android:layout_height="@dimen/e_size_77"
            android:layout_marginTop="@dimen/e_size_53"
            android:gravity="center"
            android:src="@drawable/efun_pd_pop_googleplay_logo"/>

        <TextView
            android:id="@+id/text_1"
            android:layout_width="@dimen/e_size_540"
            android:layout_height="@dimen/e_size_130"
            android:layout_marginTop="@dimen/e_size_45"
            android:gravity="center"
            android:background="@drawable/efun_pd_reset_dark_blue_normal_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_50" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="@dimen/e_size_540"
            android:layout_height="@dimen/e_size_130"
            android:layout_marginTop="@dimen/e_size_37"
            android:gravity="center"
            android:background="@drawable/efun_pd_reset_dark_blue_normal_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/e_text_size_50" />
    </LinearLayout>

</RelativeLayout>